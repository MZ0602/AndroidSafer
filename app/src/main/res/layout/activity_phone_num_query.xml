<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        style="@style/TitleText"
        android:text="号码归属地查询" />

    <EditText
        android:id="@+id/input_query_phone_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="phone"></EditText>

    <Button
        android:id="@+id/query_phone_num_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|center"
        android:background="@drawable/btn_green_normal"
        android:text="查询"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/show_phone_address_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="归属地："
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/colorAccent" />

</LinearLayout>