<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp">

    <ImageView
        android:id="@+id/app_info_icon"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:background="@drawable/main_icon" />

    <TextView
        android:id="@+id/app_info_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/app_info_icon"
        android:text="应用名称"
        android:textColor="#000000"
        android:textSize="18sp"/>

    <TextView
        android:id="@+id/app_info_is_sdcard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/app_info_name"
        android:layout_toRightOf="@id/app_info_icon"
        android:text="系统应用"
        android:textColor="#000000"
        android:textSize="18sp"/>

</RelativeLayout>